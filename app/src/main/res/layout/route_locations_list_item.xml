<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:background="@color/wallet_bright_foreground_holo_dark"
    android:orientation="horizontal"
    android:weightSum="100">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnLocationTrack"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:selectableItemBackground"
            android:drawableTop="@drawable/ic_location_searching_black_24dp"
            android:paddingTop="2dp"
            android:elevation="0dp"
            android:text="13.64 km"
            android:gravity="top"
            android:drawablePadding="4dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textColor="@color/darkerGray"
            android:textSize="12dp"
            android:focusable="false"
            android:focusableInTouchMode="true"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layoutLocationInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="85"
        android:orientation="vertical"
        android:paddingLeft="4dp">

        <TextView
            android:id="@+id/txtLocationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Location name"
            android:textColor="@color/colorSuccess"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLocationAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Location address"
            android:textColor="@color/darkerGray" />

        <TextView
            android:id="@+id/txtLocationDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Location description Location description Location description Location description Location description Location description Location description Location description Location description Location description Location description Location description"
            android:textColor="@color/darkerGray" />
    </LinearLayout>

</LinearLayout>